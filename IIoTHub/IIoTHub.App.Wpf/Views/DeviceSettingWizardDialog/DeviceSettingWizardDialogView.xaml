<Window x:Class="IIoTHub.App.Wpf.Views.DeviceSettingWizardDialog.DeviceSettingWizardDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Icon="pack://application:,,,/Resources/App.ico"
        Title="設備設定"
        WindowStartupLocation="CenterOwner"
        Width="600"
        Height="600"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--頁面內容-->
        <ContentControl Grid.Row="0"
                        Content="{Binding CurrentPageView}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"/>

        <!--導覽按鈕列-->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            
            <Button Content="上一步"
                    Width="100"
                    Height="36"
                    Margin="5,0"
                    Background="#EEE"
                    Foreground="#333"
                    BorderThickness="0"
                    Command="{Binding PreviousCommand}"
                    Visibility="{Binding PreviousButtonVisibility}"
                    Style="{StaticResource ModernButtonStyle}"/>

            <Button Content="下一步"
                    Width="100"
                    Height="36"
                    Margin="5,0"
                    Background="{StaticResource PrimaryBrush}"
                    Foreground="White"
                    BorderThickness="0"
                    Command="{Binding NextCommand}"
                    Visibility="{Binding NextButtonVisibility}"
                    Style="{StaticResource ModernButtonStyle}"/>

            <Button Content="完成"
                    Width="100"
                    Height="36"
                    Margin="5,0"
                    Background="{StaticResource PrimaryBrush}"
                    Foreground="White"
                    BorderThickness="0"
                    Command="{Binding FinishCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                    Visibility="{Binding FinishButtonVisibility}"
                    Style="{StaticResource ModernButtonStyle}"/>
            
        </StackPanel>
        
    </Grid>
    
</Window>
